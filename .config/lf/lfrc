# config for lf
# unfinished because anytime I edit this I want to kms

# Sets
set hidden true
set ignorecase true
#set icons true
#set number true
#set relativenumber true
set shell zsh
set drawbox
set previewer "~/.config/lf/previewer"
set sixel true
set info size:time

# promt format
set promptfmt "\033[34;1m%d\033[0m\033[1m%f\033[0m"
set cursorpreviewfmt "\033[4m" # underline

# Functions
# why tf isnt this a set
cmd open ${opener $f}

# file and dir creation, TODO: merge these
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}
cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

# archive stuff
cmd extract ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}


# zoxide
cmd zi ${{
    result="$(zoxide query -i | sed 's/\\/\\\\/g;s/"/\\"/g')"
    lf -remote "send $id cd \"$result\""
}}

# Unmap
map m

# Mappings
# general
map D delete
#map d trash
map p paste
map x cut
map y copy
map <enter> open
map a mkfile
map A mkdir
map <esc> unselect
map X clear
map Y clear
map z zi
map e extract

# c
map cb !cat "$f" | wl-copy --type image/png

# g
map gg top
map G bottom
map gh cd ~/
map gr cd /run/media/vmk # no variables lf?? fix your damn file manager
map gc cd ~/.config
